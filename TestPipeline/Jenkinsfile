pipeline {
    agent any
	tools
	{
		maven 'LocalMaven'
	}
	parameters
	{
		string(name: 'tomcat_dev', defaultValue: '127.0.0.1:8090', description: 'Staging Server')
		string(name: 'tomcat_prod', defaultValue: '127.0.0.1:8091', description: 'Production Server')
	}
	triggers
	{
		pollSCM('* * * * *')
	}
    stages
	{
        stage('Build')
		{
            steps 
			{
				sh 'mvn clean package'
            }
            post 
			{
                success 
				{
                    echo 'Start saving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
		stage('Deployments')
		{
			parallel
			{
				stage('Deploy to staging')
				{
					steps 
					{
						sh "curl -v -u tomcat:tomcat -T **/target/*.war 'http://${params.tomcat_dev}/manager/text/deploy?path=/my-app-path&update=true'"
					}
				}
				stage('Deploy to production')
				{
					steps 
					{
                        sh "curl -T **/target/*.war ${params.tomcat_prod}"
					}
				}
			}
		}
    }
}
	
def cmd_exec(command) 
{
	if (isUnix()) 
	{ 
		sh "${command}" 
	} 
	else 
	{ 
		bat "chcp 65001\n${command}"
	}
}